@model List<ApplicationUser> 

<script src="https://kit.fontawesome.com/a775ea28da.js" crossorigin="anonymous"></script>

<style>
    .body-container {
        display: flex;
    }

    .side-bar {
        width: 20%;
        margin: 0 20px 0 10px;
    }

    .fa-chart-line {
        margin-right: 10px;
    }

    .fa-book {
        margin-right: 10px;
    }

    .fa-list {
        margin-right: 10px;
    }

    .fa-clipboard-user {
        margin-right: 10px;
    }

    .display-container {
        width: 80%;
    }

    .form-wrapper {
        display: flex;
        margin: 10px 0 10px 0;
    }

    #search-box {
        display: flex;
    }

    #search-input {
        width: 640px;
    }

    #btn-search {
        margin: 0 10px 0 10px;
    }

    #book-management {
        color: black;
        text-decoration: none;
    }

    #category-request {
        color: black;
        text-decoration: none;
    }

    #record-management {
        color: black;
        text-decoration: none;
    }
</style>

<div class="body-container">
    <div class="side-bar">
        <ul class="list-group">
            <li class="list-group-item"><i class="fa-solid fa-book"></i><a id="book-management" asp-controller="Books" asp-action="Index">Book Management</a></li>
            <li class="list-group-item"><i class="fa-solid fa-list"></i><a id="category-request" asp-controller="Categories" asp-action="Index">Category Request</a></li>
            <li class="list-group-item"><i class="fa-solid fa-users-gear"></i> <a id="record-management"  asp-controller="Records" asp-action="GetAllCustomers">List Users</a></li>
        </ul>
    </div>

    <div class="display-container">
        <div class="form-wrapper">
            <form asp-controller="Records" asp-action="SearchCustomer" method="post">
                <input id="search-input" name="searchString" class="form-control" placeholder="Enter User you want to search" />
                <input type="submit" value="Search" id="btn-search" class="btn btn-secondary" />
            </form>
            
        </div>

        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Address</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td>
                            <a asp-controller="Records" asp-action="Details" asp-route-id=@item.Id class="btn btn-primary btn-sm">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>