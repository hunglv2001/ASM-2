

@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Order>

<script src="https://kit.fontawesome.com/a775ea28da.js" crossorigin="anonymous"></script>

<style>
    .body-container {
        display: flex;
    }

    .side-bar {
        width: 20%;
        margin: 0 20px 0 10px;
    }

    .fa-chart-line {
        margin-right: 10px;
    }

    .fa-book {
        margin-right: 10px;
    }

    .fa-list {
        margin-right: 10px;
    }

    .fa-clipboard-user {
        margin-right: 10px;
    }

    .display-container {
        width: 80%;
    }

    .form-wrapper {
        display: flex;
        margin: 10px 0 10px 0;
    }

    #search-box {
        display: flex;
    }

    #search-input {
        width: 640px;
    }

    #btn-search {
        margin: 0 10px 0 10px;
    }

    #book-management {
        color: black;
        text-decoration: none;
    }

    #category-request {
        color: black;
        text-decoration: none;
    }

    #record-management {
        color: black;
        text-decoration: none;
    }

    .customer-information-container {
        border: 1px solid black;
        border-radius: 5px;
        padding: 3px 3px 3px 3px;
        margin-bottom: 10px;
    }

    h3 {
        font-size: 20px;
        font-weight: 600;
        line-height: 1.5rem;
    }

    .fa-user, .fa-envelope, .fa-location-dot {
        margin-right: 10px;
    }
   
</style>

<div class="body-container">
    <div class="side-bar">
        <ul class="list-group">
            <li class="list-group-item"><i class="fa-solid fa-book"></i><a id="book-management" asp-controller="Books" asp-action="Index">Book Management</a></li>
            <li class="list-group-item"><i class="fa-solid fa-list"></i><a id="category-request" asp-controller="Categories" asp-action="Index">Category Request</a></li>
            <li class="list-group-item"><i class="fa-solid fa-users-gear"></i> <a id="record-management"  asp-controller="Records" asp-action="GetAllCustomers">List Users</a></li>
        </ul>
    </div>

    <div class="display-container">
      
        <div class="order-detail-container">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">ID</th>
                        <th scope="col">Date Order</th>
                        <th scope="col">Total Price</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.DateOrder</td>
                        <td>@item.PriceOrder</td>
                        <td>
                            <a class="btn btn-info" asp-route-id="@item.Id" asp-controller="Records" asp-action="ShowBookInOrder">Show Book in Order</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>


    </div>
</div>